{
    "name": "Fortics SZ.chat",
    "description": "Extens√£o do Chrome para a plataforma SZ.chat. Consulte seus atendimentos do SZ.chat a qualquer momento!",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage", 
        "activeTab", 
        "scripting",
        "declarativeContent"
    ],
    "action": {
        "default_popup": "/default_popup/popup.html",
        "default_icon": {
            "16": "/images/get_started16.png",
            "32": "/images/get_started32.png",
            "48": "/images/get_started48.png",
            "128": "/images/get_started128.png"
        }
    },
    "icons": {
        "16": "/images/get_started16.png",
        "32": "/images/get_started32.png",
        "48": "/images/get_started48.png",
        "128": "/images/get_started128.png"
    },
    "options_page": "/options_page/options.html",
    "content_scripts": [
        {
            "matches": [
                "https://*.sz.chat/*",
                "https://*.dynamics.com/*"
            ],
            "js": ["inject_script.js"],
            "run_at": "document_end"
        }
    ]
}